pipeline {
    agent any
    environment {
        name = 'suresh'
    }
    parameters {
         string(name: 'person', defaultValue: 'yadav ji', description: 'who are you?')
         booleanParam(name: 'ismale', defaultValue: true , description: '')
         choice(name: 'city', choices: ['jaipur', 'mumbai', 'pune'] , description: '')

    }
    stages {
        stage('Run a command') {
            steps {
                sh '''
                ls
                date
                pwd
                
                '''
            }
        }
        stage('Environment Variable') {
             environment {
               username = 'myusername'
           }
            steps {
                sh 'echo "${BUILD_ID}"'
                sh 'echo "${name}"'
                sh 'echo "${username}"'
                sh 'echo "${username}"'
            }
        }
        stage('Parameters') {
            steps {
                echo 'deploy to test'
                sh 'echo "${name}"'
                sh 'echo "${person}"'

            }
        }
        stage('Continue ?') {
            input {
                message "should we continue?"
                ok "Yes we should"
            }
            steps {
                echo 'deploy to prod'
            }
        }
         stage('deploy to prod') {
            steps {
                echo 'deploy to prod'
            }
        }
    }
    post{
        always {
            echo " i will always say hello again"
        }
        failure{
            echo "failure"
        }
        success{
            echo "success"
        }
    }
}
